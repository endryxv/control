  <script>
    document.getElementById('inventario-form').addEventListener('submit', function (e) {
      e.preventDefault();
      const producto = document.getElementById('producto').value;
      const categoria = document.getElementById('categoria').value;
      const cantidad = parseInt(document.getElementById('cantidad').value);
      const precio = parseFloat(document.getElementById('precio').value);

      const item = { producto, categoria, cantidad, precio, total: cantidad * precio };
      let inventario = JSON.parse(localStorage.getItem('inventario')) || [];
      inventario.push(item);
      localStorage.setItem('inventario', JSON.stringify(inventario));

      mostrarInventario();
      this.reset();
    });

    document.getElementById('filtro-nombre').addEventListener('input', mostrarInventario);
    document.getElementById('filtro-categoria').addEventListener('change', mostrarInventario);

    function mostrarInventario() {
      const inventario = JSON.parse(localStorage.getItem('inventario')) || [];
      const tabla = document.getElementById('tabla-inventario');
      const filtroNombre = document.getElementById('filtro-nombre').value.toLowerCase();
      const filtroCategoria = document.getElementById('filtro-categoria').value;

      const filtrado = inventario.filter(p => {
        return (
          (!filtroNombre || p.producto.toLowerCase().includes(filtroNombre)) &&
          (!filtroCategoria || p.categoria === filtroCategoria)
        );
      });

      tabla.innerHTML = filtrado.map(p => `
        <tr>
          <td>${p.producto}</td>
          <td>${p.categoria}</td>
          <td>${p.cantidad}</td>
          <td>$${p.precio.toFixed(2)}</td>
          <td>$${p.total.toFixed(2)}</td>
        </tr>`).join('');
    }

    mostrarInventario();
  </script>
